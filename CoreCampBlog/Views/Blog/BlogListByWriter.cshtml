@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazarın Blogları</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Oluşturma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
    </tr>
    @foreach(var item in Model)
            {
<tr>
    <td>@item.BlogId</td>
    <td>@item.BlogTitle</td>
    <td>@item.BlogCreateDate</td>
    <td>@item.Category.CategoryId</td>
    @if (item.BlogStatus)
    {
        <td><span class="badge badge-success">Aktif</span></td>
    }
    else
    {
        <td><span class="badge badge-dark">Pasif</span></td>
    }
    <td><a href="/Blog/DeleteBlog/@item.BlogId" class="btn btn-danger">Sil</a></td>
    <td><a href="/Blog/EditBlog/@item.BlogId" class="btn btn-warning">Düzenle</a></td>
    </tr>
            }
</table>

<a href="/Blog/BlogAdd/" class="btn btn-info">Yeni Blog Ekle</a> 